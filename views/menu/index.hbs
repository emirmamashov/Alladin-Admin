<div class="row">
    <h2>Меню</h2>


    <a href="/menu/create" class="btn btn-primary">Создать</a>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <td>Заголовок</td>
            <td>Ссылка</td>
            <td>Категория</td>
            <td>Под меню(Категории)</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {{#each menu}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.href}}</td>
                <td>{{this.category}}</td>
                <td>
                    {{#each children}}
                        <i class="fa fa-circle-o" aria-hidden="true"></i> {{this.title}}
                    {{/each}}
                </td>
                <td>
                    <a href="/menu/edit/{{this._id}}" class="btn btn-success">Редактировать</a>
                    <a href="/menu/delete/{{this._id}}" class="btn btn-success">Удалить</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>