<div class="row">
    <form action="/product/edit/" method="post">
        <input type="hidden" id="_id" name="_id" value="{{product._id}}">
        <div class="form-group">
            <label for="description">Категория</label>
            <select class="form-control" name="category" id="categorySel">
                {{# if categories}}
                    {{#each categories}}
                        <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                {{/if}}
            </select>
            <input type="hidden" id="category" value=""/>
        </div>
        <div class="form-group">
            <label class="control-label" for="name">Наименование</label>
            <input type="text" class="form-control" id="title"  name="title" value="{{product.title}}">
        </div>
        <div class="form-group">
            <label class="control-label" for="description">Описание</label>
            <input type="text" class="form-control" id="description" name="description" value="{{product.description}}">
        </div>
        <div class="form-group">
            <label class="control-label" for="price">Цена</label>
            <input type="text" class="form-control" id="price" name="price" value="{{product.price}}">
        </div>

        <legend>
            Мета теги:
        </legend>
        <div class="form-group">
            <label for="descriptionMeta">DESCRIPTION</label>
            <input type="text" id="descriptionMeta" name="descriptionMeta" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="keywordsMeta">KEYWORDS</label>
            <input type="text" id="keywordsMeta" name="keywordsMeta" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="authorMeta">AUTHOR</label>
            <input type="text" id="authorMeta" name="authorMeta" class="form-control"/>
        </div>

        <div class="form-group">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </form>
</div>