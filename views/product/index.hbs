<a href="/product/create" class="btn btn-primary">Добавить новый товар</a>
{{# each products}}
    <div class="row">
        {{# each this}}
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="image" class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{ this.price }}</div>

                            <a href="/product/delete/{{this._id}}" class="btn btn-success pull-right" role="button">Remove</a>
                            <a href="/product/edit/{{this._id}}" class="btn btn-success pull-right" role="button">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}